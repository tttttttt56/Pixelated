<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scoreboard">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:background="@color/cream"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/highscore_title"
        android:fontFamily="@font/press_start_2p"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- High Scores Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/highScoresCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A3B68C"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Pac-Man Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_game_button_background"
                    android:src="@drawable/pacman_button_img" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <!-- Text -->
                    <TextView
                        android:id="@+id/pacmanText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pac-Man"
                        android:fontFamily="@font/press_start_2p"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- Underline -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/highScorePacman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pacman_high"
                    android:fontFamily="@font/press_start_2p"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/first"
                    android:scaleType="centerCrop"
                    android:paddingBottom="5dp"/>
            </LinearLayout>

            <!-- Galaga Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_game_button_background"
                    android:src="@drawable/galaga_button_img" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <!-- Text -->
                    <TextView
                        android:id="@+id/galagaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Galaga"
                        android:fontFamily="@font/press_start_2p"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- Underline -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#040000" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50,000"
                    android:fontFamily="@font/press_start_2p"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:src="@drawable/second"
                    android:scaleType="centerCrop"
                    android:paddingBottom="7dp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <!-- Centipede Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_game_button_background"
                    android:src="@drawable/centipede_button_img" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <!-- Text -->
                    <TextView
                        android:id="@+id/centipedeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Centipede"
                        android:fontFamily="@font/press_start_2p"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- Underline -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#0B0B0B" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20,000"
                    android:fontFamily="@font/press_start_2p"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/third"
                    android:scaleType="centerCrop"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="-4dp"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Reset Button -->
    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/highScoresCard" />

    <!-- Most Recent Scores Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/recentScoresCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/resetButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A3B68C"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Most Recent Scores Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most Recent Scores: "
                android:fontFamily="@font/press_start_2p"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <!-- Pac-Man Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_game_button_background"
                    android:src="@drawable/pacman_button_img" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <!-- Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pac-Man"
                        android:fontFamily="@font/press_start_2p"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- Underline -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/recentScorePacman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pacman_recent"
                    android:fontFamily="@font/press_start_2p"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_down" />
            </LinearLayout>

            <!-- Repeat for Galaga -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_game_button_background"
                    android:src="@drawable/galaga_button_img" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <!-- Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Galaga"
                        android:fontFamily="@font/press_start_2p"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- Underline -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500,000"
                    android:fontFamily="@font/press_start_2p"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_up" />
            </LinearLayout>

            <!-- Repeat for Centipede -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_game_button_background"
                    android:src="@drawable/centipede_button_img" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <!-- Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Centipede"
                        android:fontFamily="@font/press_start_2p"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- Underline -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300,000"
                    android:fontFamily="@font/press_start_2p"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_down" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
