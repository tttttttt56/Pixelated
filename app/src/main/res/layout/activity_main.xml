<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="242dp">

        <Button
            android:id="@+id/galaga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/galaga"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="200dp" />

        <Button
            android:id="@+id/pacman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/pacman"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="316dp" />

        <Button
            android:id="@+id/centipede"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/centipede"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="426dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="665dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/arcade_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ArcadeMap"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="426dp" />

        <Button
            android:id="@+id/scoreboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/scoreboard"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="426dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>